{
	"extends": [
		"wesbos",
		"plugin:@wordpress/eslint-plugin/recommended-with-formatting",
		"prettier"
	],
	"parser": "babel-eslint",
	"rules": {
		"no-console": 2,
		"arrow-body-style": "off",
		"import/no-extraneous-dependencies": "off",
		"no-undef": "off",
		"react/prop-types": "off",
		"valid-jsdoc": "off",
		"require-jsdoc": "off",
		"require-param": "off",
		"prettier/prettier": [
			"error",
			{
				"singleQuote": true,
				"tabWidth": 4,
				"useTabs": true
			}
		]
	}
}
